<UserControl x:Class="Page_Navigation_App.View.ESP32Config"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Page_Navigation_App.View"
             mc:Ignorable="d" 
             d:DesignWidth="622" Height="840">
    <Grid Height="815" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="ESP32 Firmware Configuration" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   Margin="20,20,0,20" 
                   Foreground="White"/>

        <!-- Configuration Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Connection Settings -->
            <GroupBox Header="Connection Settings" 
                      Foreground="White" 
                      Grid.Row="0" 
                      Margin="0,0,0,15" 
                      Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="COM Port:" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0" 
                               Foreground="White"/>
                    <ComboBox x:Name="ComPortComboBox" 
                              Grid.Column="1" 
                              Margin="0,5,10,5"/>
                    <Button x:Name="RefreshPortsButton" 
                            Content="Refresh" 
                            Grid.Column="2" 
                            Padding="10,5"/>

                    <TextBlock Text="Baud Rate:" 
                               Grid.Row="1" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0" 
                               Foreground="White"/>
                    <ComboBox x:Name="BaudRateComboBox" 
                              Grid.Row="1" 
                              Grid.Column="1" 
                              Margin="0,5,10,5">
                        <ComboBoxItem Content="4800"/>
                        <ComboBoxItem Content="9600"/>
                        <ComboBoxItem Content="14400"/>
                        <ComboBoxItem Content="19200"/>
                        <ComboBoxItem Content="38400"/>
                        <ComboBoxItem Content="57600"/>
                        <ComboBoxItem Content="115200" IsSelected="True"/>
                    </ComboBox>
                </Grid>
            </GroupBox>

            <!-- WiFi Settings -->
            <GroupBox Header="WiFi Settings" 
                      Foreground="White" 
                      Grid.Row="1" 
                      Margin="0,0,0,15" 
                      Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="SSID:" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0" 
                               Foreground="White"/>
                    <TextBox x:Name="SsidTextBox" 
                             Grid.Column="1" 
                             Margin="0,5"/>

                    <TextBlock Text="Password:" 
                               Grid.Row="1" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0" 
                               Foreground="White"/>
                    <PasswordBox x:Name="WifiPasswordBox" 
                                 Grid.Row="1" 
                                 Grid.Column="1" 
                                 Margin="0,5"/>
                </Grid>
            </GroupBox>

            <!-- MQTT Settings -->
            <GroupBox Header="MQTT Settings" 
                      Foreground="White" 
                      Grid.Row="2" 
                      Margin="0,0,0,15" 
                      Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Broker:" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0" 
                               Foreground="White"/>
                    <TextBox x:Name="MqttBrokerTextBox" 
                             Grid.Column="1" 
                             Margin="0,5"/>

                    <TextBlock Text="Port:" 
                               Grid.Row="1" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0" 
                               Foreground="White"/>
                    <TextBox x:Name="MqttPortTextBox" 
                             Grid.Row="1" 
                             Grid.Column="1" 
                             Margin="0,5" 
                             Text="1883"/>

                    <TextBlock Text="Username:" 
                               Grid.Row="2" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0" 
                               Foreground="White"/>
                    <TextBox x:Name="MqttUsernameTextBox" 
                             Grid.Row="2" 
                             Grid.Column="1" 
                             Margin="0,5"/>

                    <TextBlock Text="Password:" 
                               Grid.Row="3" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0" 
                               Foreground="White"/>
                    <PasswordBox x:Name="MqttPasswordBox" 
                                 Grid.Row="3" 
                                 Grid.Column="1" 
                                 Margin="0,5"/>
                </Grid>
            </GroupBox>

            <!-- Control Buttons -->
            <StackPanel Grid.Row="4" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,15,0,0">
                <Button x:Name="ConnectButton" 
                        Content="Connect" 
                        Padding="15,5" 
                        Margin="0,0,10,0"/>
                <Button x:Name="SaveConfigButton" 
                        Content="Save Configuration" 
                        Padding="15,5" 
                        Margin="0,0,10,0"/>
                <Button x:Name="UploadFirmwareButton" 
                        Content="Upload Firmware" 
                        Padding="15,5"/>
            </StackPanel>

            <!-- Console Output -->
            <GroupBox Header="Console Output" 
                      Foreground="White" 
                      Grid.Row="5" 
                      Margin="0,15,0,0" 
                      Padding="10">
                <TextBox x:Name="ConsoleTextBox" 
                         IsReadOnly="True" 
                         Background="#1E1E1E" 
                         Foreground="#CCCCCC" 
                         FontFamily="Consolas" 
                         VerticalScrollBarVisibility="Auto"/>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>